server {
	listen 80 default_server;
	listen [::]:80 default_server;

	root /opt/uib-project-template;

	index index.html;

	server_name uib-project-template.local;

    # API Reverse Proxy
	location /api {
	    proxy_pass http://127.0.0.1:9090;
	}

    # Static Files
	location / {
		try_files $uri $uri/ =404;
	}
}

